# ========================================
# CONFIGURAÇÃO DA APLICAÇÃO
# ========================================
NODE_ENV=development
PORT=8800

# ========================================
# DATABASE - PRISMA
# ========================================
DATABASE_URL="postgresql://[USER]:[PASSWORD]@localhost:5432/[DATABASE]?schema=public"

# ========================================
# CONFIGURAÇÃO DA BLOCKCHAIN AZORE
# ========================================
# Mainnet
MAINNET_RPC_URL=https://rpc-mainnet.azore.technology
MAINNET_CHAIN_ID=8800

# Testnet
TESTNET_RPC_URL=https://rpc-testnet.azore.technology
TESTNET_CHAIN_ID=88001

# Rede padrão para desenvolvimento
DEFAULT_NETWORK=testnet

# URLs dos exploradores Azorescan
MAINNET_EXPLORER_URL=https://azorescan.com/api
TESTNET_EXPLORER_URL=https://floripa.azorescan.com/api

# ========================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=[YOUR_DATABASE_NAME]
DB_USER=[YOUR_DATABASE_USER]
DB_PASSWORD=[YOUR_DATABASE_PASSWORD]
DB_DIALECT=postgres
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ========================================
# CONFIGURAÇÃO DO REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURAÇÃO DO RABBITMQ
# ========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ========================================
# JWT
# ========================================
JWT_SECRET=[GENERATE_RANDOM_SECRET_64_CHARS]
JWT_REFRESH_SECRET=[GENERATE_RANDOM_SECRET_64_CHARS]
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# ADMIN USER (para seed inicial)
# ========================================
ADMIN_NAME=Administrador
ADMIN_EMAIL=[YOUR_EMAIL@DOMAIN.COM]
ADMIN_PASSWORD=[YOUR_SECURE_PASSWORD]
ADMIN_CPF=[YOUR_CPF_NUMBERS_ONLY]

# ========================================
# CONFIGURAÇÃO DE EMAIL
# ========================================
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Coinage System

# ========================================
# LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# SEGURANÇA
# ========================================
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=[GENERATE_RANDOM_SECRET]

# ========================================
# URLs DA APLICAÇÃO
# ========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8800
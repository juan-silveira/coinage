# - default_stake_abi.json

# ========================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=coinage_db
DB_USER=coinage_user
DB_PASSWORD=your_secure_password_here

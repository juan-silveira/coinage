{
  "info": {
    "name": "ðŸ“„ Gerenciamento de Contratos",
    "description": "Endpoints para validaÃ§Ã£o, implantaÃ§Ã£o e operaÃ§Ãµes com contratos inteligentes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "{{base_url}}",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "{{api_key}}",
      "type": "string"
    },
    {
      "key": "contract_address",
      "value": "{{contract_address}}",
      "type": "string"
    },
    {
      "key": "contract_abi",
      "value": "{{contract_abi}}",
      "type": "string"
    },
    {
      "key": "function_name",
      "value": "{{function_name}}",
      "type": "string"
    },
    {
      "key": "role",
      "value": "{{role}}",
      "type": "string"
    },
    {
      "key": "target_address",
      "value": "{{target_address}}",
      "type": "string"
    },
    {
      "key": "admin_public_key",
      "value": "{{admin_public_key}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Validate ABI",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"abi\": {{contract_abi}}\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/validate-abi",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "validate-abi"]
        }
      },
      "response": []
    },
    {
      "name": "Deploy Contract",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"contractData\": {\n    \"name\": \"TestContract\",\n    \"abi\": {{contract_abi}},\n    \"bytecode\": \"0x...\",\n    \"network\": \"testnet\"\n  },\n  \"walletAddress\": \"{{admin_public_key}}\",\n  \"options\": {\n    \"gasLimit\": 5000000\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/deploy",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "deploy"]
        }
      },
      "response": []
    },
    {
      "name": "Get Contract Functions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/functions",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "functions"]
        }
      },
      "response": []
    },
    {
      "name": "Get Contract Events List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/events",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "events"]
        }
      },
      "response": []
    },
    {
      "name": "Write Contract",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"functionName\": \"{{function_name}}\",\n  \"params\": [],\n  \"walletAddress\": \"{{admin_public_key}}\",\n  \"options\": {\n    \"gasLimit\": 100000\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/write",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "write"]
        }
      },
      "response": []
    },
    {
      "name": "Query Contract Events",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"eventName\": \"Transfer\",\n  \"fromBlock\": 0,\n  \"toBlock\": \"latest\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/events/query",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "events", "query"]
        }
      },
      "response": []
    },
    {
      "name": "Grant Role",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"{{role}}\",\n  \"targetAddress\": \"{{target_address}}\",\n  \"adminPublicKey\": \"{{admin_public_key}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/grant-role",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "grant-role"]
        }
      },
      "response": []
    },
    {
      "name": "Has Role",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"{{role}}\",\n  \"targetAddress\": \"{{target_address}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/has-role",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "has-role"]
        }
      },
      "response": []
    },
    {
      "name": "Revoke Role",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"{{role}}\",\n  \"targetAddress\": \"{{target_address}}\",\n  \"adminPublicKey\": \"{{admin_public_key}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/contracts/{{contract_address}}/revoke-role",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "{{contract_address}}", "revoke-role"]
        }
      },
      "response": []
    },
    {
      "name": "Test Contract Service",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/contracts/test/service",
          "host": ["{{base_url}}"],
          "path": ["api", "contracts", "test", "service"]
        }
      },
      "response": []
    }
  ]
} 
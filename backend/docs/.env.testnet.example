# Configuração para TESTNET - Coinage cBRL
# Copie este arquivo para .env.testnet e ajuste os valores

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/coinage_testnet"

# JWT
JWT_SECRET="your-very-secret-jwt-key-for-testnet"
JWT_REFRESH_SECRET="your-very-secret-refresh-key-for-testnet"

# API Configuration
API_BASE_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3001"
PORT=3000

# Environment
NODE_ENV="development"

# Blockchain Configuration - Azore Testnet
BLOCKCHAIN_NETWORK="testnet"
AZORE_TESTNET_RPC_URL="https://testnet-rpc.azore.com"
AZORE_MAINNET_RPC_URL="https://mainnet-rpc.azore.com"
BLOCKCHAIN_PRIVATE_KEY="0x1234567890abcdef..." # Private key para testnet (NÃO usar em produção)

# cBRL Token Contract
CBRL_CONTRACT_ADDRESS="0x..." # Endereço do contrato cBRL na testnet

# RabbitMQ
RABBITMQ_URL="amqp://admin:password@localhost:5672"

# Redis
REDIS_URL="redis://localhost:6379"

# PIX Configuration (Mock para testnet)
PIX_PROVIDER="mock"
PIX_API_URL="https://api-pix.example.com"
PIX_API_KEY="mock_key"
PIX_WEBHOOK_SECRET="mock_webhook_secret"

# Email Configuration
EMAIL_PROVIDER="mock"
EMAIL_API_KEY="mock_email_key"
EMAIL_FROM_ADDRESS="noreply@coinage-testnet.com"
SUPPORT_EMAIL="suporte@coinage-testnet.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # 100 requests per window
RATE_LIMIT_TRANSACTION_MAX=10  # 10 transactions per window

# Cache
CACHE_TTL=300  # 5 minutes

# Security
BCRYPT_ROUNDS=10

# Webhook Configuration
WEBHOOK_TIMEOUT=10000  # 10 seconds
WEBHOOK_MAX_RETRIES=3

# Monitoring
LOG_LEVEL="debug"

# External APIs (testnet endpoints)
BLOCKCHAIN_EXPLORER_URL="https://testnet-explorer.azore.com"

# Testing Configuration
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_MOCK_PIX=true
ENABLE_MOCK_EMAIL=true

# Development Tools
ENABLE_SWAGGER=true
SWAGGER_HOST="localhost:3000"

# Worker Configuration
WORKER_CONCURRENCY=3
WORKER_RETRY_ATTEMPTS=3
WORKER_RETRY_DELAY=5000

# Queue Configuration
QUEUE_MESSAGE_TTL=300000  # 5 minutes
QUEUE_MAX_RETRIES=3
QUEUE_PREFETCH=10

# Blockchain Gas Configuration
GAS_LIMIT_MULTIPLIER=1.2  # 20% buffer
GAS_PRICE_MULTIPLIER=1.1  # 10% buffer

# PIX Fees (em BRL)
PIX_DEPOSIT_FEE=0.00
PIX_WITHDRAWAL_FEE=2.50

# Minimum amounts (em BRL)
MIN_DEPOSIT_AMOUNT=1.00
MIN_WITHDRAWAL_AMOUNT=10.00
MAX_DEPOSIT_AMOUNT=50000.00
MAX_WITHDRAWAL_AMOUNT=50000.00

# Session Configuration
SESSION_TIMEOUT=3600000  # 1 hour

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# Company Configuration
DEFAULT_COMPANY_ID="default-company-id"

# Feature Flags
ENABLE_TWO_FACTOR=true
ENABLE_WHITELABEL=true
ENABLE_USER_DOCUMENTS=true
ENABLE_NOTIFICATIONS=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Development Debugging
DEBUG_SQL=false
DEBUG_BLOCKCHAIN=true
DEBUG_PIX=true
DEBUG_WORKERS=true
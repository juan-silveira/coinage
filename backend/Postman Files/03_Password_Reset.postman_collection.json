{
  "info": {
    "name": "ðŸ”‘ RecuperaÃ§Ã£o de Senha JWT",
    "description": "Endpoints para recuperaÃ§Ã£o e reset de senha usando JWT tokens da API Azore Blockchain",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "{{base_url}}",
      "type": "string"
    },
    {
      "key": "email",
      "value": "{{email}}",
      "type": "string"
    },
    {
      "key": "reset_token",
      "value": "{{reset_token}}",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "{{api_key}}",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "{{access_token}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Request Password Reset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/password-reset/request",
          "host": ["{{base_url}}"],
          "path": ["api", "password-reset", "request"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.data && response.data.token) {",
              "        pm.environment.set(\"reset_token\", response.data.token);",
              "        console.log(\"Reset token saved to environment\");",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Validate Reset Token",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/password-reset/validate/{{reset_token}}",
          "host": ["{{base_url}}"],
          "path": ["api", "password-reset", "validate", "{{reset_token}}"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Token is valid\", function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"newPassword\": \"novaSenha123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/password-reset/reset/{{reset_token}}",
          "host": ["{{base_url}}"],
          "path": ["api", "password-reset", "reset", "{{reset_token}}"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Password reset successful\", function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cleanup Expired Tokens (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/password-reset/cleanup",
          "host": ["{{base_url}}"],
          "path": ["api", "password-reset", "cleanup"]
        }
      },
      "response": []
    },
    {
      "name": "Get Token Stats (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/password-reset/stats",
          "host": ["{{base_url}}"],
          "path": ["api", "password-reset", "stats"]
        }
      },
      "response": []
    }
  ]
} 
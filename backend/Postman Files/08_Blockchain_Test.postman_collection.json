{
  "info": {
    "name": "ðŸ§ª Teste de Blockchain",
    "description": "Endpoints para testes de conexÃ£o e consultas na blockchain Azore",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "{{base_url}}",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "{{api_key}}",
      "type": "string"
    },
    {
      "key": "block_number",
      "value": "{{block_number}}",
      "type": "string"
    },
    {
      "key": "transaction_hash",
      "value": "{{transaction_hash}}",
      "type": "string"
    },
    {
      "key": "wallet_address",
      "value": "{{wallet_address}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Test Blockchain Connection",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test/connection",
          "host": ["{{base_url}}"],
          "path": ["api", "test", "connection"]
        }
      },
      "response": []
    },
    {
      "name": "Get Network Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test/network-info",
          "host": ["{{base_url}}"],
          "path": ["api", "test", "network-info"]
        }
      },
      "response": []
    },
    {
      "name": "Get Latest Block",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test/block/latest",
          "host": ["{{base_url}}"],
          "path": ["api", "test", "block", "latest"]
        }
      },
      "response": []
    },
    {
      "name": "Get Block by Number",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test/blocks/{{block_number}}",
          "host": ["{{base_url}}"],
          "path": ["api", "test", "blocks", "{{block_number}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get Transaction by Hash",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test/transactions/{{transaction_hash}}",
          "host": ["{{base_url}}"],
          "path": ["api", "test", "transactions", "{{transaction_hash}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get Wallet Balance",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/test/wallets/{{wallet_address}}/balance",
          "host": ["{{base_url}}"],
          "path": ["api", "test", "wallets", "{{wallet_address}}", "balance"]
        }
      },
      "response": []
    }
  ]
} 
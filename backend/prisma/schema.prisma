// Novo sistema de roles
enum UserRole {
  USER        // Usuário básico (acesso a próprios dados, menos chave privada)
  ADMIN       // Administrador (gestão de usuários do mesmo cliente, dono da carteira master)
  SUPER_ADMIN // Super administrador (acesso total ao sistema, inclusive chaves privadas)
  APP_ADMIN   // Administrador do APP (acesso a quase tudo, mas não chaves privadas)
}

// Planos de usuário para controle de funcionalidades
enum UserPlan {
  BASIC       // Plano básico: auto-sync a cada 5 minutos
